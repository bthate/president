#!/usr/bin/env python3
# This file is placed in the Public Domain.

import os, sys ; sys.path.insert(0, os.getcwd())

from ob.evt import Command
from ob.krn import Client, Kernel, cmd
from ob.hdl import cmd
from ob.trm import exec
from ob.tbl import tbl
from ob.zzz import os, sys

__version__ = 22

class CLI(Client):

    def dosay(self, channel, txt):
        print(txt)

class Console(CLI):

    def poll(self):
        return input("> ")

def main():
    k = Kernel(tbl)
    k.version = __version__
    k.boot()
    k.scan(os.path.join(os.getcwd(), "mod"))
    if k.txt:
        c = CLI()
    else:
        c = Console()
    k.connect(c)
    if k.txt:
        e = c.event(k.txt)
        cmd(c, e)
        e.wait()
    elif k.mods:
        k.start()
        k.init(k.mods)
        k.wait()

exec(main)
